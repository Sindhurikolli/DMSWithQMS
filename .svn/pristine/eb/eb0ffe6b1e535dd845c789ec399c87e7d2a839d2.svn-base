     @Test
     public void toDoDocumentTreeCreation() throws InterruptedException {
     Thread.sleep(1000);
     driver.findElement(By.id("bmrHomeInCommonHPHeader")).click();
     Thread.sleep(1000);
     driver.findElement(By.id("adminTabId")).click();
     Thread.sleep(1000);
     driver.findElement(By.xpath("//*[@id=\"side-menu\"]/li[3]/a")).click();
     Thread.sleep(1000);
