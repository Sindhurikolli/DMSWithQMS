 *
 * @author Jeevan
 */
public class DmsDocumentTypeApproval extends LoginDetailsInitiator {

    public DmsDocumentTypeApproval() {
    }
    // TODO add test methods here.
    // The methods must be annotated with annotation @Test. For example:
    //

    @Test
    public void toDoDmsDocumentTypeApproval() throws InterruptedException {
        Thread.sleep(1200);
        driver.findElement(By.id("bmrHomeInCommonHPHeader")).click();
        Thread.sleep(1000);
        driver.findElement(By.id("myActivitiesInDMS")).click();
        Thread.sleep(1000);
        methodToDoDmsDocumentTypeApproval();
    }

    private void methodToDoDmsDocumentTypeApproval() throws InterruptedException {
        driver.findElement(By.id("dmsApprovalId")).click();
        Thread.sleep(1000);
        driver.findElement(By.id("dmsDocTypePageId")).click();
        Thread.sleep(1000);
        methodToSelectRecordFromApprovalDoctTypeTable();
    }

    private void methodToSelectRecordFromApprovalDoctTypeTable() throws InterruptedException {
        boolean isRecordSelectedForApprovalDoctType = false;
        int count = 0;
        String documentTypeName = properties.getProperty("DOCUMENT_TYPE_CREATION_NAME");
        isRecordSelectedForApprovalDoctType = selectRecordFromDoctTypeApprovalTable(documentTypeName, isRecordSelectedForApprovalDoctType, count);
        Thread.sleep(1000);
        if (isRecordSelectedForApprovalDoctType) {
            driver.findElement(By.id("commentsInDTAppWindow")).sendKeys(properties.getProperty("COMMENTS_DOCT_TYPE_APPROVAL"));
            Thread.sleep(1000);
            driver.findElement(By.id("approveBtnInDTAppWindow")).click();
            Thread.sleep(1000);
            driver.findElement(By.id("eSignPwdInWnd")).sendKeys(properties.getProperty("ESIGN_PASSWD"));
            Thread.sleep(1000);
            driver.findElement(By.id("subBtnInValidateESign")).click();
            Thread.sleep(1000);
            WebDriverWait wait = new WebDriverWait(driver, 70);
            wait.until(ExpectedConditions.presenceOfElementLocated(By.className("modal-btn")));
            Thread.sleep(1000);
            driver.findElement(By.className("modal-btn")).click();
            Thread.sleep(1000);
        } else {
            System.out.println("Record is not Selected");
        }
    }

    private boolean selectRecordFromDoctTypeApprovalTable(String documentTypeName, boolean isRecordSelectedForApprovalDoctType, int count) throws InterruptedException {
        WebElement table = driver.findElement(By.id("DcoumentTypeApprovalInDMS"));
        WebElement tableBody = table.findElement(By.tagName("tbody"));
        int perPageNoOfRecordsPresent = tableBody.findElements(By.tagName("tr")).size();
        int totalNoOfRecords = 0;
        int noOfRecordsChecked = 0;
        if (perPageNoOfRecordsPresent > 0) {
            String a = driver.findElement(By.className("jtable-page-info")).getText();// For Ex: Showing 1-1 of 1
            String[] parts = a.split(" of ");
            try {
                totalNoOfRecords = Integer.parseInt(parts[1].trim());
            } catch (Exception e) {
                System.out.println(e.getMessage());
            }
        }
        if (perPageNoOfRecordsPresent > 0 && count == 0) {
            if ((totalNoOfRecords > 1) && ((documentTypeName == null) || ("".equalsIgnoreCase(documentTypeName)))) {
                documentTypeName = driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr[1]/td[2]")).getText();//documentType
            } else if ((documentTypeName == null) || ("".equalsIgnoreCase(documentTypeName))) {
                documentTypeName = driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr/td[2]")).getText();//documentType
            }
            ++count;
        }
        if (perPageNoOfRecordsPresent > 0) {
            while (noOfRecordsChecked < totalNoOfRecords) {
                if (totalNoOfRecords > 1) {
                    for (int i = 1; i <= perPageNoOfRecordsPresent; i++) {
                        String documentTypeNameInApproval = driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr[" + i + "]/td[2]")).getText();//documentTypeName
                        if (documentTypeName.equalsIgnoreCase(documentTypeNameInApproval)) {
                            driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr[" + i + "]/td[8]/img")).click();
                            isRecordSelectedForApprovalDoctType = true;
                            break;                        
                        }
                    }
                    if (isRecordSelectedForApprovalDoctType) {
                        break;
                    }
                } else {
                    String documentTypeNameInApproval = driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr/td[2]")).getText();
                    if (documentTypeName.equalsIgnoreCase(documentTypeNameInApproval)) {
                        driver.findElement(By.xpath("//*[@id=\"DcoumentTypeApprovalInDMS\"]/div/table/tbody/tr/td[8]/img")).click();
                        isRecordSelectedForApprovalDoctType = true;
                        break;
                    }
                }
                noOfRecordsChecked += perPageNoOfRecordsPresent;
                if ((!isRecordSelectedForApprovalDoctType) && (noOfRecordsChecked < totalNoOfRecords)) {
                    driver.findElement(By.className("jtable-page-number-next")).click();//next page in Document approve list
                    Thread.sleep(3000);
                    table = driver.findElement(By.id("DcoumentTypeApprovalInDMS"));//Document Tree approve table
                    tableBody = table.findElement(By.tagName("tbody"));
                    perPageNoOfRecordsPresent = tableBody.findElements(By.tagName("tr")).size();
                }
            }
        }

        return isRecordSelectedForApprovalDoctType;
    }
}
