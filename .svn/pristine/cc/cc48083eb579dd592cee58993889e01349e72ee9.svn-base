    @BeforeClass
    public static void setUpClass() throws Exception {
        System.out.println("Before Login");
final String propertyFilePath = "src/test/java/com/pss/dms/properties/DMSProperties.properties";
        BufferedReader reader;
        try {
            reader = new BufferedReader(new FileReader(propertyFilePath));
            properties = new Properties();
            try {
                properties.load(reader);
                reader.close();
            } catch (IOException e) {
                e.printStackTrace();
            }
        } catch (FileNotFoundException e) {
            e.printStackTrace();
            throw new RuntimeException("DMSProperties.properties not found at " + propertyFilePath);
        }
        Thread.sleep(2000);
        System.setProperty("webdriver.chrome.driver", "D:/Softwares/Selenium-Webdrivers/32bit new/32bit/chromedriver.exe");
//        System.setProperty("webdriver.ie.driver", "D:/Softwares/Selenium-Webdrivers/32bit/IEDriverServer.exe");
//System.setProperty("webdriver.ie.driver", "D:/Softwares/Selenium-Webdrivers/64bit/IEDriverServer.exe");

//        driver = new InternetExplorerDriver();
        driver = new ChromeDriver();
        driver.manage().window().maximize(); // to maximize FireFox browser


        driver.get(properties.getProperty("DMS_URL"));

        //Login Page
        if (properties != null) {
            Thread.sleep(2000);
            driver.findElement(By.xpath("//input[@name='loginUserName']")).sendKeys(properties.getProperty("username"));
            Thread.sleep(3000);
            driver.findElement(By.xpath("//input[@name='loginPassword']")).sendKeys(properties.getProperty("password"));
            Thread.sleep(3000);
            driver.findElement(By.xpath("//*[@id=\"loginform\"]/div[2]/button[1]")).click();
        } else {
            System.out.println("Properties file path not exist");
        }
        Thread.sleep(2000);
        System.out.println("LoginDetails --- END");
    }

